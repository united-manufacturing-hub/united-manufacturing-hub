{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Status Message Schema",
  "description": "Schema for the status message containing system state and DFC information",
  "definitions": {
    "Health": {
      "type": "object",
      "required": [
        "state",
        "message"
      ],
      "properties": {
        "state": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "EventKafka": {
      "type": "object",
      "required": [
        "messagesPerMinute",
        "topic",
        "key",
        "lastPayload",
        "kafkaInsertedTimestamp"
      ],
      "properties": {
        "messagesPerMinute": {
          "type": "number"
        },
        "topic": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "headers": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          ]
        },
        "lastPayload": {
          "type": "string"
        },
        "kafkaInsertedTimestamp": {
          "type": "number"
        },
        "origin": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "destination": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Connection": {
      "type": "object",
      "required": [
        "uuid",
        "name",
        "uri",
        "latency",
        "health"
      ],
      "properties": {
        "uuid": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "uri": {
          "type": "string",
          "description": "The connection URI in full, e.g., 'opc.tcp://hostname:port/path'. This includes the scheme, host, port, and any required path elements."
        },
        "latency": {
          "type": "number",
          "description": "Latency in milliseconds"
        },
        "health": {
          "$ref": "#/definitions/Health"
        }
      },
      "additionalProperties": false
    },
    "DFCMetrics": {
      "type": "object",
      "required": [
        "throughputMsgPerSec",
        "failedMessages",
        "unprocessable",
        "unprocessable24h"
      ],
      "properties": {
        "throughputMsgPerSec": {
          "type": "number",
          "description": "Throughput expressed in messages per second"
        },
        "failedMessages": {
          "type": "number"
        },
        "unprocessable": {
          "type": "number"
        },
        "unprocessable24h": {
          "type": "number"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "general",
    "core",
    "plugins"
  ],
  "additionalProperties": false,
  "properties": {
    "general": {
      "type": "object",
      "required": [
        "location"
      ],
      "properties": {
        "location": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "core": {
      "type": "object",
      "required": [
        "supportedFeatures",
        "version",
        "releaseChannel",
        "latency",
        "container",
        "agent",
        "dfcs",
        "redpanda"
      ],
      "properties": {
        "supportedFeatures": {
          "type": "array",
          "description": "List of supported feature keywords. If a feature is supported, its corresponding keyword will be included in the array.",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": "string"
        },
        "releaseChannel": {
          "type": "string"
        },
        "latency": {
          "type": "object",
          "required": [
            "avg",
            "max",
            "min",
            "p95",
            "p99"
          ],
          "properties": {
            "avg": {
              "type": "number",
              "description": "Average latency in milliseconds"
            },
            "max": {
              "type": "number",
              "description": "Maximum latency in milliseconds"
            },
            "min": {
              "type": "number",
              "description": "Minimum latency in milliseconds"
            },
            "p95": {
              "type": "number",
              "description": "95th percentile latency in milliseconds"
            },
            "p99": {
              "type": "number",
              "description": "99th percentile latency in milliseconds"
            }
          },
          "additionalProperties": false
        },
        "container": {
          "type": "object",
          "required": [
            "cpu",
            "memory",
            "disk",
            "architecture",
            "hwid"
          ],
          "properties": {
            "cpu": {
              "type": "object",
              "required": [
                "usage",
                "limit",
                "health"
              ],
              "additionalProperties": false,
              "properties": {
                "usage": {
                  "type": "number",
                  "description": "CPU usage as a percentage (0-100%)"
                },
                "limit": {
                  "type": "number",
                  "description": "CPU limit in number of cores"
                },
                "health": {
                  "$ref": "#/definitions/Health"
                }
              }
            },
            "memory": {
              "type": "object",
              "required": [
                "usage",
                "limit",
                "health"
              ],
              "additionalProperties": false,
              "properties": {
                "usage": {
                  "type": "number",
                  "description": "Memory usage in bytes"
                },
                "limit": {
                  "type": "number",
                  "description": "Memory limit in bytes"
                },
                "health": {
                  "$ref": "#/definitions/Health"
                }
              }
            },
            "disk": {
              "type": "object",
              "required": [
                "usage",
                "limit",
                "health"
              ],
              "additionalProperties": false,
              "properties": {
                "usage": {
                  "type": "number",
                  "description": "Disk usage in bytes"
                },
                "limit": {
                  "type": "number",
                  "description": "Disk limit in bytes"
                },
                "health": {
                  "$ref": "#/definitions/Health"
                }
              }
            },
            "architecture": {
              "type": "string",
              "description": "Processor architecture. Examples: 'arm/v7', 'armv7', 'armhf', 'x86_64', etc."
            },
            "hwid": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "agent": {
          "type": "object",
          "required": [
            "health"
          ],
          "properties": {
            "health": {
              "$ref": "#/definitions/Health"
            }
          },
          "additionalProperties": false
        },
        "dfcs": {
          "type": "array",
          "description": "List of deployed DFCs. Different DFC types can have different properties",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "required": [
                  "uuid",
                  "dfcType",
                  "deploySuccess"
                ],
                "additionalProperties": false,
                "properties": {
                  "uuid": {
                    "type": "string"
                  },
                  "currentVersionUUID": {
                    "type": "null"
                  },
                  "name": {
                    "type": "null"
                  },
                  "health": {
                    "type": "null"
                  },
                  "metrics": {
                    "type": "null"
                  },
                  "deploySuccess": {
                    "type": "boolean"
                  },
                  "dfcType": {
                    "const": "uninitialized"
                  }
                }
              },
              {
                "type": "object",
                "required": [
                  "uuid",
                  "currentVersionUUID",
                  "name",
                  "health",
                  "metrics",
                  "deploySuccess",
                  "dfcType",
                  "connections"
                ],
                "additionalProperties": false,
                "properties": {
                  "uuid": {
                    "type": "string"
                  },
                  "currentVersionUUID": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "health": {
                    "$ref": "#/definitions/Health"
                  },
                  "metrics": {
                    "$ref": "#/definitions/DFCMetrics"
                  },
                  "deploySuccess": {
                    "type": "boolean"
                  },
                  "dfcType": {
                    "const": "protocol-converter"
                  },
                  "connections": {
                    "type": "array",
                    "description": "For 'protocol-converter' type, this array contains exactly one connection.",
                    "items": {
                      "$ref": "#/definitions/Connection"
                    }
                  }
                }
              },
              {
                "type": "object",
                "required": [
                  "uuid",
                  "currentVersionUUID",
                  "name",
                  "health",
                  "metrics",
                  "deploySuccess",
                  "dfcType"
                ],
                "additionalProperties": false,
                "properties": {
                  "uuid": {
                    "type": "string"
                  },
                  "currentVersionUUID": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "health": {
                    "$ref": "#/definitions/Health"
                  },
                  "metrics": {
                    "$ref": "#/definitions/DFCMetrics"
                  },
                  "deploySuccess": {
                    "type": "boolean"
                  },
                  "dfcType": {
                    "const": "custom"
                  }
                }
              },
              {
                "type": "object",
                "required": [
                  "uuid",
                  "currentVersionUUID",
                  "name",
                  "health",
                  "metrics",
                  "deploySuccess",
                  "dfcType",
                  "connections",
                  "isReadOnly",
                  "inputType",
                  "outputType",
                  "dataContract"
                ],
                "additionalProperties": false,
                "properties": {
                  "uuid": {
                    "type": "string"
                  },
                  "currentVersionUUID": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "health": {
                    "$ref": "#/definitions/Health"
                  },
                  "metrics": {
                    "$ref": "#/definitions/DFCMetrics"
                  },
                  "deploySuccess": {
                    "type": "boolean"
                  },
                  "dfcType": {
                    "const": "data-bridge"
                  },
                  "connections": {
                    "type": "array",
                    "description": "For 'data-bridge' type, this array always contains exactly two connections.",
                    "items": {
                      "$ref": "#/definitions/Connection"
                    }
                  },
                  "isReadOnly": {
                    "type": "boolean"
                  },
                  "inputType": {
                    "type": "string"
                  },
                  "outputType": {
                    "type": "string"
                  },
                  "dataContract": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        },
        "redpanda": {
          "type": "object",
          "required": [
            "health",
            "throughputIncomingMsgPerSec",
            "throughputOutgoingMsgPerSec"
          ],
          "properties": {
            "health": {
              "$ref": "#/definitions/Health"
            },
            "throughputIncomingMsgPerSec": {
              "type": "number",
              "description": "Incoming throughput in messages per second"
            },
            "throughputOutgoingMsgPerSec": {
              "type": "number",
              "description": "Outgoing throughput in messages per second"
            }
          },
          "additionalProperties": false
        },
        "unsTable": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "enterprise": {
                "type": "string"
              },
              "site": {
                "type": "string"
              },
              "area": {
                "type": "string"
              },
              "line": {
                "type": "string"
              },
              "workCell": {
                "type": "string"
              },
              "schema": {
                "type": "string"
              },
              "eventGroup": {
                "type": "string"
              },
              "eventTag": {
                "type": "string"
              },
              "originId": {
                "type": "string"
              },
              "isError": {
                "type": "boolean"
              },
              "instances": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "enterprise"
            ],
            "additionalProperties": false
          }
        },
        "eventsTable": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "unsTreeId",
              "error",
              "timestamp_ms",
              "value",
              "rawKafkaMessage"
            ],
            "additionalProperties": false,
            "properties": {
              "unsTreeId": {
                "type": "string"
              },
              "error": {
                "type": "string"
              },
              "timestamp_ms": {
                "type": "number",
                "description": "Timestamp in milliseconds"
              },
              "bridges": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "origin": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "value": {},
              "rawKafkaMessage": {
                "$ref": "#/definitions/EventKafka"
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
